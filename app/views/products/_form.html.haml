= form_for @product, html: { multipart: true } do |f|
  - if @product.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible{:role => "alert"}
      %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} &times;
      %h4= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, autofocus: true, placeholder: 'Name', class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, placeholder: 'Description', class: 'form-control'
  .form-group
    = f.label :price
    = f.text_field :price, placeholder: 'Price', class: 'form-control'
  .form-group
    = f.label :image
    = f.file_field :image, class: 'form-control'
  .form-group
    = f.submit 'Save', class: 'btn btn-primary'
